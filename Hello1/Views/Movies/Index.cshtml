@model Hello1.Models.Movies

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Movies</h2>


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>movie's Name</th>
            <th>Edit option</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var movie in Model.MoviesList)
        {
            <tr>
                <th>@Html.ActionLink(@movie.Name, "Details/" + @movie.ID, "Movies") </th>
                <th>@Html.ActionLink("Edit", "Edit/" + @movie.ID, "Movies")</th>
            </tr>
        }

    </tbody>

</table>

@Html.ActionLink("Add New movie", "New/", "Movies")