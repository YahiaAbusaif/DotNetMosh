@model Hello1.Models.Movies

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Movies</h2>


<table id="Movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>movie's Name</th>
            <th>Year</th>
            <th>Geners</th>
            <th>Edit option</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
    </tbody>

</table>

@Html.ActionLink("Add New movie", "New/", "Movies")


@section scripts
{
    <script>
        $(document).ready(function () {
             var table = $("#Movies").dataTable({
                ajax: {
                    url: "/api/Movies",
                    dataSrc: ""
                },
                columns: [
                        {
                            data : "name",
                            render: function(data, type, Movie) {
                                return "<a href='/Movies/Details/" + Movie.id +"'>" + Movie.name +"</a>";
                            }
                        },
                        {
                            data : "release"
                        },
                        {
                            data : "genres",
                            render: function (data) {
                                if(data.length == 0)
                                    return "None";
                                var AllGenre = "";
                                for (var i = 0; i < data.length; i++) 
                                { AllGenre+= data[i].name +" "; }
                                return AllGenre;
                            } 
                        },

                        {
                            data : "id",
                            render: function (data) {
                                return "<a href='/Movies/Edit/" + data +"'>Edit</a>";
                            }  
                        },
                        {
                            data: "id",
                            render: function (data) {
                                return "<button  class='btn-link js-delete' data-Movie-id=" + data +">Delete</button>" ;
                            }

                        }
                    ]
             });

            $("#Movies").on("click",".js-delete" ,function () {

                var button = $(this);
                bootbox.confirm("are you sure you want to delete this Movie??", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/Movies/" + button.attr("data-Movie-id"),
                            method: "DELETE",
                            success: function () {table.row(button.parents("tr")).remove().draw();}
                            });
                    }
                });
            });

        });
    </script>

}